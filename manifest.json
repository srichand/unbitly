{
    "name": "Unbitly",
    "version": "1.0",
    "description": "Find out where those bit.ly links really point to!",
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": [
                "js/jquery.js",
                "js/content.js",         
                "js/jquery.dimensions.min.js",
                "js/jquery.simpletip-1.3.1.pack.js"
            ],
            "css": ["css/default.css"]
        }
    ],
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "Unbitly",
        "default_popup": "popup.html"
    },
    "permissions": [
        "http://api.flickr.com/"
        ]
}
